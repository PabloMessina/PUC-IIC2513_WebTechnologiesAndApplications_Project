<h1>Listing Groceries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groceries.each do |grocery| %>
      <tr>
        <td><%= grocery.name %></td>
        <td><%= grocery.address %></td>
        <td><%= link_to 'Show', admin_grocery_path(grocery) %></td>
        <td><%= link_to 'Edit', edit_admin_grocery_path(grocery) %></td>
        <td><%= link_to 'Destroy', admin_grocery_path(grocery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grocery', new_admin_grocery_path %>
