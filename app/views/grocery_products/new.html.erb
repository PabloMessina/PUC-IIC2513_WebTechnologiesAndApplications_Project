
<h1>Create a new Product</h1>

<%= form_for(@product, url: grocery_products_path) do |f| %>

  <%= render 'shared/error_messages', object: @product %>

  <div class = "field">
    <%= f.label :image, "Image" %>
    <%= f.file_field :image %>
  </div>

  <div class = "field">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :stock, "Stock" %>
    <%= f.number_field :stock %>
  </div>

  <div class="field">
    <%= f.label :unit, "Unit" %>
    <%= f.select :unit, 
      options_for_select(
        Product.units.map{ |k,v| [k,v] }, 
        Product.units[:item]
      ) %>
  </div>

  <div class="field">
    <%= f.label :price, "Price" %>
    <%= f.number_field :price %>
  </div>

  <%= f.submit 'Submit product' %>

<% end %>