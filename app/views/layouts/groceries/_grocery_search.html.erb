<%= form_tag search_products_path(@grocery), method: 'get', id: "products_search", style: "width:100%" do %>

  <table style="width:100%">
  <tr>

    <td style="width:100%"><%= text_field_tag :search, nil, style: "width:100%"%></td>
    <td><%= submit_tag "Search in grocery", :name => nil, class: 'button-with-image' %></td>

  </tr>
  </table>

  <button type="button" id='advanced_button'>Show advanced fields</button>
  <div id="advanced_fields" style="width:100%" class="hide-element">

    <table style="width:100%">

    <tr>
      <td>
        <label>Filter by category (OR)</label>
      </td>
      <td>
        <label>Filter by tags (AND)</label>
      </td>
    </tr>

    <tr>
      <td>
        <%= select_tag :categories, options_from_collection_for_select(@grocery.get_categories, "id", "name"), multiple: true, class: 'awesome-select', style:"width:100%" %>
      </td>
      <td>
        <%= select_tag :tags, options_from_collection_for_select(@grocery.get_tags,"id","name"), multiple: true,   class: 'awesome-select', style:"width:100%" %>
      </td>
    </tr>

    </table>
  </div>

<% end %>
