<h1>Sign in</h1>


<div>
  <%= form_for(:session, url: sessions_path) do |f| %>

    <div class = "field">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class = "field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Sign in"%>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
