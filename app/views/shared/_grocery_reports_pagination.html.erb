<% if @reports.any? %>
	<br>
	<h2>News</h2>
	<%= will_paginate @reports, params: {controller: 'grocery_reports', action: 'index', grocery_id: @grocery.id} %>
	<% @reports.each do |report| %>

		<div class="report-container">
			<h4><%= report.title %></h4>

			<% if report.product %>
				<% if report.product.has_image? %>
					<%= image_tag report.product.product_image.product_image_url, :style => "width: 50; height: 50px;"  %>
				<% else %>
					<%= image_tag "products-icon-basket.gif", :style => "width: 50px; height: 50px;"  %>
				<% end %>
			<% end %>

			<%= simple_format(report.text) %>

			<% if report.product %>
				<a href="<%= grocery_product_path(@grocery, report.product) %>">
					<span class="link-spanner"></span>
				</a>
			<% end %>

			<% if @privilege == :administrator %>
				<table class="report-admin">
					<tr>
						<td><%= link_to "Edit", edit_grocery_report_path(@grocery, report) %></td>
						<td><%= link_to "Destroy", grocery_report_path(@grocery, report), data: { confirm: "Are you sure?" , method: :delete } %></td>
					</tr>
				</table>
				<clear-fix></clear-fix>
			<% end %>

		</div>
		<br>

	<% end %>
	<%= will_paginate @reports, params: {controller: 'grocery_reports', action: 'index', grocery_id: @grocery.id} %>
<% end %>
